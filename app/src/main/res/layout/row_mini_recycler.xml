<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ln_layout_row_mini_recycler_holder"
        android:background="@color/naranja"
        android:orientation="vertical"
        android:layout_width="110dp"
        android:layout_height="150dp">




    <ImageView
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/img_view_foto_row_mini_recycler_holder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:background="@color/naranjaclaro"
            android:gravity="center"
            android:id="@+id/txt_view_titulo_row_mini_recycler"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:text="Texto Nombre"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="8sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:background="@color/naranjaclaro"
            android:gravity="center"
            android:id="@+id/txt_view_costo_row_mini_recycler"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:text="$100,000"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>