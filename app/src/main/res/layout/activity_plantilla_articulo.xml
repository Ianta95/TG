<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:background="@color/naranja"
        tools:context="com.example.jesus95.truequedegarage.Articulos.PlantillaArticulo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_exit_plantilla_articulo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/exit" />

                <ImageView
                    android:background="@drawable/borde"
                    android:id="@+id/image_view_0_plantilla"
                    android:layout_marginTop="6dp"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:background="@drawable/borde"
                    android:id="@+id/image_view_1_plantilla"
                    android:layout_marginTop="6dp"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:background="@drawable/borde"
                    android:id="@+id/image_view_2_plantilla"
                    android:layout_marginTop="6dp"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"/>



            </LinearLayout>


            <ImageView
                android:background="@drawable/borde"
                android:id="@+id/image_view_principal_plantilla"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_view_titulo_plantilla"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre Largo Articulo"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_view_rango_plantilla"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Rango Precio +/-: $100000"
                    android:textSize="18dp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/image_view_categoria_plantilla"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/borde"
                android:maxHeight="100dp"
                android:maxWidth="100dp" />


        </LinearLayout>

        <TextView
            android:text="Descripcion:"
            android:background="@drawable/borde"
            android:id="@+id/txt_view_descripcion_plantilla"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:longClickable="false"
            android:maxLines="4"

            />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_view_opcion_1_platilla_articulo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btn_opcion_1_plantilla_articulo"
            android:text="opcion 1"
            android:layout_width="100dp"
            android:layout_height="40dp" />

        <ImageView
            android:layout_marginLeft="40dp"
            android:id="@+id/img_view_opcion_2_platilla_articulo"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/btn_opcion_2_plantilla_articulo"
            android:text="opcion 2"
            android:layout_width="100dp"
            android:layout_height="40dp" />

    </LinearLayout>



    </LinearLayout>


