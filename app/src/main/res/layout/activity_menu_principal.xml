<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/naranja"
    tools:context="com.example.jesus95.truequedegarage.MenuPrincipal">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_logout_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/logout">

        </Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="26"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/btn_plus_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/plus">

    </Button>

    </LinearLayout>



    <Button
        android:id="@+id/btn_usuario"
        android:layout_gravity="center"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/mejormicuenta"/>



    <Button
        android:id="@+id/btn_buscar"
        android:layout_gravity="center"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mejorbuscar"/>

    <Button
        android:id="@+id/btn_crear"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/mejorcrear"
        />



</LinearLayout>
