<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranja"
    tools:context="com.example.jesus95.truequedegarage.Articulos.SeleccionarArticulos">



        <Button
            android:id="@+id/btn_exit_seleccionar_articulos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/exit" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/btn_exit_seleccionar_articulos"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Articulos:"
            android:textSize="30sp"
            android:paddingStart="20dp"
            android:id="@+id/textView3" />



        <TextView
            android:textSize="20sp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tus Articulos"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:text="Propuesta"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:id="@+id/textView4"
            android:layout_above="@+id/recycler_mini_view_seleccionar_articulos"
            android:layout_alignEnd="@+id/textView3" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_mini_view_seleccionar_articulos"
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_enviar_seleccionar_articulos" />

    <Button
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttonverdeokpropuesta"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ENVIAR PROPUESTA"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_enviar_seleccionar_articulos" />



</RelativeLayout>
