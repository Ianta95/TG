<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/naranja"
    tools:context="com.example.jesus95.truequedegarage.Articulos.Finalizar">

    <TextView
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡LISTO!"
        android:textSize="90sp"
        android:layout_gravity="center"
        />

    <TextView
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finalizar_publicacion"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/congratulations"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_salir_finalizar"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="REGRESAR"
            android:textColor="@color/white"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/exit"
            android:background="@color/rojo"
            android:layout_width="160dp"
            android:layout_height="70dp" />

        <Button
            android:id="@+id/btn_ver_publicacion_finalizar"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Ver"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/viewp"
            android:background="@color/azulclaro"
            android:layout_width="160dp"
            android:layout_height="70dp" />

    </LinearLayout>


</LinearLayout>
